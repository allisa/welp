<!DOCTYPE html>
<html>
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header', {title: 'Welp', classes: 'index_background'}) %>
    <div class="cardContainer index">
      <section class="searchForms">
        <form method="GET" action="/results">
          <label for="cuisine">Cuisine: </label>
          <input type="text" name="cuisine" id="cuisine" class="search-input" required />
          <label for="radius">Radius (1-5 miles): </label>
          <input type="number" name="radius" id="radius" step="1" min="1" max="5" class="search-input" required />
          <label for="price">Price: </label>
          <select name="price">
            <option selected value="1">
              $
            </option>
            <option value="2">
              $$
            </option>
            <option value="3">
              $$$
            </option>
            <option value="4">
              $$$$
            </option>
          </select>
          <button name="submit" class="search-button"></button>
          <input type="hidden" name="lat" id="lat" />
          <input type="hidden" name="long" id="long" />
          <input type="hidden" name="search" id="search" value="true" />
        </form>
      </section>
    </div>
    </div>
    </div>
    </div>
    <%- include('partials/footer') %>
    <script src="js/app.js"></script>
  </body>
</html>
